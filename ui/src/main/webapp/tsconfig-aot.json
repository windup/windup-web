{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": ".",
    "sourceRoot": "/windup-web/"
  },
  "files": [
    "typings/index.d.ts",
    "app/main.ts",
    "app/app.module.ts",
    "app/components/app.component.ts"
  ],
  "exclude": [
    "node_modules",
    "target",
    "typings/main",
    "typings/main.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}
